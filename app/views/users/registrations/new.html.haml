%h1= I18n.t('register.header')

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|

    .field
        = f.label :first_name
        = f.text_field :first_name
        .error= resource.errors['first_name'].first

    .field
        = f.label :last_name
        = f.text_field :last_name
        .error= resource.errors['last_name'].first

    .field
        = f.label :mailing_address
        = f.text_field :mailing_address
        .error= resource.errors['mailing_address'].first

    .field
        = f.label :city
        = f.text_field :city
        .error= resource.errors['city'].first

    .field
        = f.label :province
        = f.select :province, I18n.t('registration.form.provinces').map{|key, value| [value[:option], value[:value]]}
        .error= resource.errors['province'].first


    .field
        = f.label :email
        = f.email_field :email
        .error= resource.errors['email'].first

    .field
        = f.label :password
        = f.password_field :password
        .error= resource.errors['password'].first

    .field
        = f.label :password_confirmation
        = f.password_field :password_confirmation
        .error= resource.errors['password_confirmation'].first

    .field
        = f.submit "Sign up"

    = render "users/shared/links"
